extends layout

block content
	.panel.panel-primary
		.panel-heading= title
		.panel-body
			table.table.table-condensed.table-striped
				thead
					tr
						th English
						th Japanese
						th Category
						th User
						th Date
				tbody
					if objects
						each object, i in objects
							tr(id=object.number)
								td 
									a(href='/#{objectname}/contribute/view/#{object.number}')= object.title.english
								td 
									a(href='/#{objectname}/contribute/view/#{object.number}')= object.title.japanese
								td
									if objectname == 'tag'	
										a(href='/#{objectname}/type/#{object.properties.type}')= object.properties.type
									else
								td 
									a(href='/user/#{object.user.number}', class=object.user.role, title=object.user.role)= object.user.name
								td #{prettyDate(object.date)}
		.panel-footer
			.text-center
				ul.pagination
					li
						a(href='/#{objectname}/contribute/list/deleted') Deleted
					li
						a(href='/#{objectname}/contribute/list/rejected') Rejected
					li
						a(href='/#{objectname}/contribute/list/pending') Pending
					li
						a(href='/#{objectname}/contribute/list/published') Published
			p Submit a 
				a(href='/#{objectname}/contribute/new') new #{objectname}!
